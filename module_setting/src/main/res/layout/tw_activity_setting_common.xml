<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_theme_layout"
                android:layout_width="match_parent"
                android:layout_height="92px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#4c5362">

    <TextView
        android:id="@+id/title_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="设置"
        android:textColor="#ffffff"
        android:textSize="40px"/>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/title_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_iv_icon2"
                android:layout_width="52px"
                android:layout_height="52px"
                android:layout_marginRight="20px"
                android:layout_centerInParent="true"
                android:src="@drawable/tw_setting_navigation_refresh_icon"/>

            <TextView
                android:id="@+id/title_tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:layout_marginRight="64px"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="40px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_iv_icon"
                android:layout_width="52px"
                android:layout_height="52px"
                android:layout_marginRight="20px"
                android:layout_centerInParent="true"
                android:src="@drawable/tw_setting_navigation_add_icon"/>

            <TextView
                android:id="@+id/title_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="64px"
                android:layout_centerInParent="true"
                android:text="添加"
                android:textColor="#ffffff"
                android:textSize="40px"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/title_iv_quit"
        android:layout_width="80px"
        android:layout_height="match_parent"
        android:src="@drawable/tw_setting_navigation_back_icon"
        android:layout_alignBottom="@+id/title_tv_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20px"
        android:layout_marginStart="64px"/>

    <TextView
        android:id="@+id/title_tv_quit"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginLeft="140px"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="40px"/>

</RelativeLayout>